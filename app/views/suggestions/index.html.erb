<%# <div class="container" style="margin-top: 70px"> %>


<div class="swiper mySwiper">
  <div class="swiper-wrapper">
    <% @suggestions.each do |suggestion| %>

      <div class="swiper-slide">
        <div class="card p-5 ">

          <div class='img-container' style="background-image: url(<%= image_path("food-01.jpg") %>)">
            <%#= image_tag("food-01.jpg", class: "card-img-top") %>
            <%# <h2>text</h2> %>
          </div>

            <%= suggestion.title %>
          </div>
<div class="container" style="margin-top: 70px">
  <%= link_to suggestion_path(@my_suggestion), class: 'text-decoration-none text-dark' do %>
    <div class="card mb-3 suggestion-cards" style='overflow: hidden'>
      <% if @my_suggestion.images.present? %>
        <%= image_tag(@my_suggestion.images[0], class: "card-img-top") %>
      <% else %>
        <%= image_tag("food-01.jpg", class: "card-img-top") %>
      <% end %>
      <div class="suggestion-cards-info">
        <h5
          class="card-title"
          style="padding-top: 15px; font-weight: 700; letter-spacing: 1px; padding-bottom: -1px; "
        ><%= @my_suggestion.title %></h5>
        <div>
          <p class="card-text"><i class="fa-solid fa-location-dot"></i>
            <%= @my_suggestion.city %>
            &nbsp;
            <%= @my_suggestion.sub_category %>
            &nbsp;
            <i class="fa-solid fa-star brand-text" style="font-size: 14px">
              <%= @my_suggestion.rating %></i>
          </p>
        </div>

      </div>

    <% end %>
  </div>
    </div>
  <% end %>
</div>


<%# </div> %>

<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<script>
    const swiper = new Swiper(".mySwiper", {
      effect: "cards",
      grabCursor: true,
    });
  </script>
