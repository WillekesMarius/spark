<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px; justify-content: between;">
              <%= image_tag("Avatar.jpg", class: "avatar-extra-large") %>
            </div>
            <div class="ms-3">
              <%= current_user.first_name %> <%= current_user.last_name %>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div id="edit-profile-button">
              <%= link_to edit_user_registration_path do %>
                <button class="btn btn-ghost d-flex" style= "text-decoration: none; padding: 10px; justify-content: center;" >Edit Profile</button>
              <%end%>
            </div>
            <div class="card-body p-4 text-black">
              <div class="mb-5">
                <p class="lead fw-normal mb-1">Interests</p>
                <div class="p-4" style="background-color: #f8f9fa;">
                  <p class="font-montserrat mb-1">Adventure & Active</p>
                  <p class="font-montserrat mb-1">Romantic</p>
                  <p class="font-montserrat mb-0">Outdoor</p>
                </div>
              </div>
              <div id="cancel-profile-button" >
                <%= link_to "Cancel my account", edit_user_registration_path, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
